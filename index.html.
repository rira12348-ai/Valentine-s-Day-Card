    <script>
        function moveNo() {
            const btn = document.getElementById('noBtn');
            const x = Math.random() * (window.innerWidth - btn.offsetWidth);
            const y = Math.random() * (window.innerHeight - btn.offsetHeight);
            btn.style.left = x + 'px';
            btn.style.top = y + 'px';
        }

        function showLove() {
            // Start the music
            const song = document.getElementById('loveSong');
            song.play();

            const card = document.getElementById('mainCard');
            card.innerHTML = `
                <img src="https://media.giphy.com/media/v1.Y2lkPTc5MGI3NjExdmh0N2R3N3R3N3R3N3R3N3R3N3R3N3R3N3R3N3R3N3R3JmVwPXYxX2ludGVybmFsX2dpZl9ieV9pZCZjdD1n/K976vO5vO1HHi/giphy.gif" style="width:250px;">
                <h1>YAY! ‚ù§Ô∏è Nafis + You Forever! ‚ú®</h1>
                <p style="font-size: 18px; color: #ff4d6d;">Turn up the volume! üîä</p>
            `;
        }
    </script>

